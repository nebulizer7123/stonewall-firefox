{
  "manifest_version": 2,
  "name": "Stonewall",
  "version": "0.1.1",
  "description": "Block distracting websites, track time, and schedule blocks.",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "alarms",
    "idle"
  ],
  "background": {
    "scripts": ["background.js", "timeTracking.js"]
  },
  "icons": {
    "48": "brick.png",
    "96": "brick.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": "brick.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "blocked.html",
    "stonewall-theme.css"
  ],
  "applications": {
    "gecko": {
      "id": "stonewall@example.com"
    }
  }
}
